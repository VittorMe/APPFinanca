<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:views="clr-namespace:APPFinanca.Views"
       x:Class="APPFinanca.AppShell">

    <!-- Menu Lateral -->
    <FlyoutItem Title="Transações" Icon="transaction_icon.png">
        <!-- Referência correta para TransactionList com o namespace "views" -->
        <ShellContent  ContentTemplate="{DataTemplate views:TransactionList}" />
    </FlyoutItem>
    <FlyoutItem Title="Dashboard" >
        <!-- Referência correta para TransactionList com o namespace "views" -->
        <ShellContent  ContentTemplate="{DataTemplate views:Dashboard}" />
    </FlyoutItem>


    <MenuItem 
        
        Text="Sair" 
        Clicked="OnLogoutClicked"/>


</Shell>
